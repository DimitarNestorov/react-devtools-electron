{
	"name": "react-devtools-electron",
	"version": "4.1.0",
	"description": "Add React DevTools to your Electron app",
	"main": "./dist/index.js",
	"repository": "https://dimitarnestorov@github.com/dimitarnestorov/react-devtools-electron.git",
	"author": "Dimitar Nestorov <opensource@dimitarnestorov.com> (https://dimitarnestorov.com)",
	"license": "MIT",
	"scripts": {
		"test": "yarn run build && yarn run build-example",
		"prepublishOnly": "yarn run clear && yarn run test && yarn run download-extension && yarn run check-extension-version",
		"clear-cache": "rimraf .cache",
		"clear": "rimraf .cache && rimraf ./dist && rimraf ./example/dist",
		"download-extension": "rimraf extension && ced fmkadmapgofadopljbjfkapdkoienihi extension",
		"check-extension-version": "ts-node check-extension-version.ts",
		"build-example": "yarn run build -p ./example/tsconfig.json",
		"watch-example": "yarn run build-example --watch",
		"run-example-electron5": "electron ./example",
		"run-example-electron6": "node ./node_modules/electron6/cli.js ./example",
		"run-example-electron7": "node ./node_modules/electron7/cli.js ./example",
		"build": "tsc",
		"watch": "yarn run build --watch"
	},
	"devDependencies": {
		"@types/react": "^16.9.2",
		"@types/react-dom": "^16.9.0",
		"chrome-ext-downloader": "^1.0.4",
		"electron": "5.0.11",
		"electron6": "npm:electron@6.0.10",
		"electron7": "npm:electron@7.0.0-beta.4",
		"react": "^16.9.0",
		"react-devtools": "4.1.0",
		"react-dom": "^16.9.0",
		"rimraf": "^3.0.0",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.3"
	},
	"peerDependencies": {
		"electron": ">= 5"
	},
	"keywords": [
		"react",
		"devtools",
		"electron"
	]
}
